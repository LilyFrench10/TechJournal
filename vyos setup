hostname
configure
set system host-name name
commit 
save
exit

add new user/change password
set system login user newusername authentication plaintext-password 'PASSWORD'



interfaces
configure
set interfaces thernet ethX description decriptiontext
commit
save
exit

configure
set interfaces ethernet ethX address ip/mask
commit
save
exit


gateway and dns forwarding
configure
set protocols static route 0.0.0.0/0 next-hop ip4forwarding
set system name-server ip4dns
commit
save
exit
